{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es6",
    "sourceMap": false,
    "lib": ["es7", "es2017.object"]
  },
  "exclude": ["node_modules", "lib/", "**/*.spec.ts"]
}
